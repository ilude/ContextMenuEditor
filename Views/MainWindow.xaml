<Window x:Class="ContextMenuEditor.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:ContextMenuEditor.ViewModels"
    xmlns:views="clr-namespace:ContextMenuEditor.Views"
    xmlns:util="clr-namespace:ContextMenuEditor.Utilities"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Context Menu Editor" 
        Height="600" Width="900"
        MinHeight="400" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    
    <Window.Resources>
        <util:StripQuotesConverter x:Key="StripQuotesConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
    <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" 
        Padding="12" BorderThickness="0,0,0,1" Height="60">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <!-- Show Windows items toggle -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,6,0">
                    <TextBlock Text="Show Windows items" VerticalAlignment="Center" Margin="0,0,2,0" LineStackingStrategy="BlockLineHeight" LineHeight="24"/>
                    <Border CornerRadius="12" BorderBrush="Transparent" BorderThickness="0" Padding="0" Background="{DynamicResource AlternateRowBackgroundBrush}" VerticalAlignment="Center" ClipToBounds="False" SnapsToDevicePixels="True" Margin="0">
                        <Grid Width="44" Height="32">
                            <mah:ToggleSwitch
                                IsOn="{Binding IncludeWindowsSystemItems, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                OnContent=""
                                OffContent=""
                                HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Height="26"
                                MinWidth="0"
                                Margin="0"
                                Background="{DynamicResource AlternateRowBackgroundBrush}"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Theme toggle with sun/moon icons, no text label -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Sun icon (active when Light mode) -->
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE706;" FontSize="14" VerticalAlignment="Center" Margin="0,0,4,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#808080"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDarkMode}" Value="False">
                                        <Setter Property="Foreground" Value="{DynamicResource SelectionBackgroundBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Border CornerRadius="12" BorderBrush="Transparent" BorderThickness="0" Padding="0" Background="{DynamicResource AlternateRowBackgroundBrush}" VerticalAlignment="Center" ClipToBounds="False" SnapsToDevicePixels="True" Margin="0">
                        <Grid Width="44" Height="32">
                            <mah:ToggleSwitch
                                IsOn="{Binding IsDarkMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                OnContent=""
                                OffContent=""
                                HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Height="26"
                                MinWidth="0"
                                Margin="0"
                                Background="{DynamicResource AlternateRowBackgroundBrush}"/>
                        </Grid>
                    </Border>
                    <!-- Moon icon (active when Dark mode) -->
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE708;" FontSize="14" VerticalAlignment="Center" Margin="4,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#808080"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDarkMode}" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource SelectionBackgroundBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Tab Control for separate features -->
        <TabControl Grid.Row="1" Margin="8">
            <!-- Context Menus Tab -->
            <TabItem Header="Context Menus">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Style="{StaticResource MainGridColumn}"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Style="{StaticResource RightActionColumn}"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Single DataGrid with all items -->
                    <DataGrid Grid.Row="0" Grid.Column="0" Margin="8"
                              ItemsSource="{Binding AllMenuItems}"
                              SelectedItem="{Binding SelectedItem}"
                              SelectionChanged="DataGrid_SelectionChanged"
                              >
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Enabled" 
                                                   Binding="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   Width="60"/>
                            <DataGridTextColumn Width="120">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="Target" 
                                               ToolTip="Empty = folder background (empty space in a folder window)"/>
                                </DataGridTextColumn.Header>
                                <DataGridTextColumn.Binding>
                                    <Binding Path="TargetDisplay"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Menu Text" 
                                              Binding="{Binding ProgramName}" 
                                              Width="Auto"
                                              MinWidth="150"/>
                            <DataGridTemplateColumn Width="60">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Shift" 
                                               ToolTip="Requires Shift+Right Click to appear"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="10" Height="10"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Fill="#28a745"
                                                 StrokeThickness="0"
                                                 Visibility="{Binding IsExtended, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Ellipse.ToolTip>
                                                <ToolTip Content="Requires Shift+Right Click to appear"/>
                                            </Ellipse.ToolTip>
                                        </Ellipse>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Publisher" 
                                              Binding="{Binding Publisher}" 
                                              Width="150"/>
                            <DataGridTextColumn Header="Command" 
                                              Binding="{Binding FilePath, Converter={StaticResource StripQuotesConverter}}" 
                                              Width="Auto"
                                              MinWidth="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Vertical Separator -->
                    <GridSplitter Grid.Row="0" Grid.Column="1" Width="1" 
                                 HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                 Background="{DynamicResource BorderBrush}"/>
                    
                    <!-- Action Buttons Panel -->
                    <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource ActionPanelBorder}">
                        <StackPanel Margin="8" VerticalAlignment="Top">
                            <Button Content="Enable" 
                                    Command="{Binding EnableCommand}"
                                    IsEnabled="{Binding HasSelection}"/>
                            <Button Content="Disable" 
                                    Command="{Binding DisableCommand}"
                                    IsEnabled="{Binding HasSelection}"/>
                            <Button Content="Delete" 
                                    Command="{Binding DeleteCommand}"
                                    IsEnabled="{Binding HasSelection}"/>
                            <Separator Margin="0,8"/>
                            <Button Content="Export Context Menus" 
                                    Command="{Binding BackupCommand}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Status Bar for Context Menus -->
                    <StatusBar Grid.Row="1" Grid.ColumnSpan="3">
                        <StatusBarItem>
                            <TextBlock Text="{Binding StatusMessage}"/>
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
            </TabItem>
            
            <!-- Startup Programs Tab -->
            <TabItem Header="Startup Programs">
                <views:StartupView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
