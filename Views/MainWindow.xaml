<Window x:Class="ContextMenuEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ContextMenuEditor.ViewModels"
        xmlns:views="clr-namespace:ContextMenuEditor.Views"
        xmlns:util="clr-namespace:ContextMenuEditor.Utilities"
        Title="Context Menu Editor" 
        Height="600" Width="900"
        MinHeight="400" MinWidth="700"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <util:StripQuotesConverter x:Key="StripQuotesConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" 
                Padding="12" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="ðŸŒ™" FontSize="16" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <Button Content="{Binding IsDarkMode, Converter={StaticResource ThemeLabelConverter}}"
                        Command="{Binding ToggleThemeCommand}"
                        Padding="8,4"
                        MinWidth="80"
                        Margin="0"/>
            </StackPanel>
        </Border>
        
        <!-- Tab Control for separate features -->
        <TabControl Grid.Row="1" Margin="8">
            <!-- Context Menus Tab -->
            <TabItem Header="Context Menus">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Style="{StaticResource MainGridColumn}"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Style="{StaticResource RightActionColumn}"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Single DataGrid with all items -->
                    <DataGrid Grid.Row="0" Grid.Column="0" Margin="8"
                              ItemsSource="{Binding AllMenuItems}"
                              SelectedItem="{Binding SelectedItem}"
                              SelectionChanged="DataGrid_SelectionChanged"
                              >
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Enabled" 
                                                   Binding="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   Width="60"/>
                            <DataGridTextColumn Width="120">
                                <DataGridTextColumn.Header>
                                    <TextBlock Text="Target" 
                                               ToolTip="Empty = folder background (empty space in a folder window)"/>
                                </DataGridTextColumn.Header>
                                <DataGridTextColumn.Binding>
                                    <Binding Path="TargetDisplay"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Menu Text" 
                                              Binding="{Binding ProgramName}" 
                                              Width="Auto"
                                              MinWidth="150"/>
                            <DataGridTemplateColumn Width="60">
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="Shift" 
                                               ToolTip="Requires Shift+Right Click to appear"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="10" Height="10"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Fill="#28a745"
                                                 StrokeThickness="0"
                                                 Visibility="{Binding IsExtended, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <Ellipse.ToolTip>
                                                <ToolTip Content="Requires Shift+Right Click to appear"/>
                                            </Ellipse.ToolTip>
                                        </Ellipse>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Publisher" 
                                              Binding="{Binding Publisher}" 
                                              Width="150"/>
                            <DataGridTextColumn Header="Command" 
                                              Binding="{Binding FilePath, Converter={StaticResource StripQuotesConverter}}" 
                                              Width="Auto"
                                              MinWidth="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Vertical Separator -->
                    <GridSplitter Grid.Row="0" Grid.Column="1" Width="1" 
                                 HorizontalAlignment="Center" VerticalAlignment="Stretch"
                                 Background="{DynamicResource BorderBrush}"/>
                    
                    <!-- Action Buttons Panel -->
                    <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource ActionPanelBorder}">
                        <StackPanel Margin="8" VerticalAlignment="Top">
                            <Button Content="Enable" 
                                    Command="{Binding EnableCommand}"
                                    IsEnabled="{Binding HasSelection}"/>
                            <Button Content="Disable" 
                                    Command="{Binding DisableCommand}"
                                    IsEnabled="{Binding HasSelection}"/>
                            <Button Content="Delete" 
                                    Command="{Binding DeleteCommand}"
                                    IsEnabled="{Binding HasSelection}"/>
                            <Separator Margin="0,8"/>
                            <Button Content="Export Context Menus" 
                                    Command="{Binding BackupCommand}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Status Bar for Context Menus -->
                    <StatusBar Grid.Row="1" Grid.ColumnSpan="3">
                        <StatusBarItem>
                            <TextBlock Text="{Binding StatusMessage}"/>
                        </StatusBarItem>
                    </StatusBar>
                </Grid>
            </TabItem>
            
            <!-- Startup Programs Tab -->
            <TabItem Header="Startup Programs">
                <views:StartupView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
