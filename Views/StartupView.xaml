<UserControl x:Class="ContextMenuEditor.Views.StartupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ContextMenuEditor.ViewModels"
             Background="{DynamicResource WindowBackgroundBrush}">
    
    <UserControl.DataContext>
        <vm:StartupViewModel/>
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            
            <!-- DataGrid with startup items -->
            <DataGrid Grid.Column="0" Margin="8"
                      x:Name="StartupDataGrid"
                      ItemsSource="{Binding StartupItems}"
                      SelectedItem="{Binding SelectedItem}"
                      SelectionChanged="DataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Enabled" 
                                           Binding="{Binding IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                           Width="60"/>
                    <DataGridTextColumn Header="Name" 
                                      Binding="{Binding Name}" 
                                      Width="Auto"
                                      MinWidth="150"/>
                    <DataGridTextColumn Header="Publisher" 
                                      Binding="{Binding Publisher}" 
                                      Width="150"/>
                    <DataGridTextColumn Header="Command" 
                                      Binding="{Binding Command}" 
                                      Width="*"
                                      MinWidth="200"/>
                    <DataGridTextColumn Header="Location" 
                                      Binding="{Binding Location}" 
                                      Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Vertical Separator -->
            <GridSplitter Grid.Column="1" Width="1" 
                         HorizontalAlignment="Center" VerticalAlignment="Stretch"
                         Background="{DynamicResource BorderBrush}"/>
            
            <!-- Action Buttons Panel -->
            <Border Grid.Column="2" Background="{DynamicResource WindowBackgroundBrush}">
                <StackPanel Margin="8" VerticalAlignment="Top">
                    <Button Content="Enable" 
                            Command="{Binding EnableCommand}"
                            IsEnabled="{Binding HasSelection}"/>
                    <Button Content="Disable" 
                            Command="{Binding DisableCommand}"
                            IsEnabled="{Binding HasSelection}"/>
                    <Button Content="Delete" 
                            Command="{Binding DeleteCommand}"
                            IsEnabled="{Binding HasSelection}"/>
                    <Separator Margin="0,8"/>
                    <Button Content="Backup Registry Entries" 
                            Command="{Binding BackupCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="1">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
